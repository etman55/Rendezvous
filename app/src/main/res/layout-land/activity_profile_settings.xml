<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F0B2A">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/widget_size"
        android:layout_height="@dimen/widget_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/display_name_txt"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_place_holder" />

    <TextView
        android:id="@+id/display_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="75dp"
        android:text="@string/display_name"
        android:textSize="48dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:id="@+id/about_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/display_name_txt"
        android:layout_alignStart="@+id/display_name_txt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:text="@string/profile_about"
        android:textSize="32dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Button
        android:id="@+id/change_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change_about"
        android:layout_alignBottom="@+id/change_about"
        android:layout_alignLeft="@+id/avatar"
        android:layout_alignStart="@+id/avatar"
        android:layout_marginLeft="154dp"
        android:layout_marginStart="154dp"
        android:background="@android:color/white"
        android:paddingEnd="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingStart="32dp"
        android:text="@string/change_image"
        android:textColor="#3F0B2A"
        android:textSize="24sp" />

    <Button
        android:id="@+id/change_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/display_name_txt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/display_name_txt"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:paddingEnd="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingStart="18dp"
        android:text="@string/change_info"
        android:textSize="24sp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
</RelativeLayout>
