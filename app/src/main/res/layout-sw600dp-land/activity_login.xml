<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textSize="24sp">

    </android.support.design.widget.TextInputEditText>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textSize="24sp">

    </android.support.design.widget.TextInputEditText>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="6dp"
        android:background="@color/colorAccent"
        android:text="@string/btn_login"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/google_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_google_plus" />

    <ImageView
        android:id="@+id/facebook_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/google_btn"
        android:layout_marginRight="280dp"
        android:src="@drawable/ic_facebook" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_builtin_btn"
        android:layout_width="@dimen/zero_dimen"
        android:layout_height="@dimen/zero_dimen" />

    <TextView
        android:id="@+id/sign_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/facebook_builtin_btn"
        android:layout_toRightOf="@+id/facebook_builtin_btn"
        android:text="@string/sign_up_button"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sign_up_btn"
        android:layout_alignBottom="@+id/sign_up_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/reset_password"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/facebook_builtin_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/app_logo"
        android:textColor="#C00F52"
        android:textSize="129sp" />
</RelativeLayout>