<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/widget_user_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_place_holder"
        android:backgroundTint="#000"
        android:contentDescription="@string/placeholder"/>

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_avatar"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/user_avatar"
        android:layout_toRightOf="@+id/user_avatar"
        android:text="@string/display_name"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/user_about_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_alignLeft="@+id/user_name_txt"
        android:layout_alignStart="@+id/user_name_txt"
        android:layout_below="@+id/user_name_txt"
        android:layout_marginTop="12dp"
        android:text="@string/profile_about"
        android:textSize="24sp" />
</RelativeLayout>